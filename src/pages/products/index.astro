---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";

const availableNow = [
  {
    name: "Subsea Vision Camera",
    description:
      "Deterministic imaging with low latency and wide field-of-view in a pressure-rated housing.",
    href: "/products/camera",
    image: "/products/camera.webp",
    category: "Vision",
  },
];

const comingSoon = [
  {
    name: "Vision Processing Unit",
    summary:
      "Deterministic multi-camera processing with fast boot and tight system integration.",
    category: "Vision",
  },
  {
    name: "Lights",
    summary: "High-lumen subsea illumination with closed-loop control.",
    category: "Systems",
  },
  {
    name: "FOG Gyro",
    summary: "Precision inertial sensing for navigation and stabilization.",
    category: "Navigation",
  },
  {
    name: "Quartz Pressure Sensor",
    summary: "High-accuracy depth and pressure measurement.",
    category: "Sensing",
  },
  {
    name: "Subsea Converter",
    summary: "Rugged signal and protocol conversion for subsea networks.",
    category: "Power & IO",
  },
  {
    name: "Subsea Display",
    summary: "Pressure-rated operator displays for subsea systems.",
    category: "Systems",
  },
];
---

<BaseLayout title="ZiMO — Products">
  <Header />

  <main class="bg-[#070a0f] text-white">
    <section class="relative overflow-hidden">
      <div class="pointer-events-none absolute inset-0 bg-[radial-gradient(1200px_700px_at_50%_30%,rgba(255,255,255,0.08),transparent_65%)]"></div>
      <div class="relative mx-auto max-w-6xl px-6 pb-16 pt-24 md:pb-24 md:pt-32">
        <div class="max-w-2xl">
          <p class="text-xs font-semibold uppercase tracking-[0.3em] text-white/50">
            Products
          </p>
          <h1 class="mt-4 text-4xl font-semibold tracking-tight md:text-6xl">
            Vision
          </h1>
          <p class="mt-6 text-sm leading-relaxed text-white/70 md:text-base">
            Integrated camera and processing hardware for deterministic,
            low-latency subsea vision systems.
          </p>
        </div>
      </div>
    </section>

    <section class="relative">
      <div class="mx-auto max-w-6xl px-6 pb-16">
        <div class="flex flex-col gap-3 md:flex-row md:items-end md:justify-between">
          <div>
            <h2 class="text-3xl font-semibold tracking-tight md:text-4xl">
              Available now
            </h2>
            <p class="mt-3 text-sm text-white/70 md:text-base">
              Field-ready vision hardware with deterministic timing and low
              latency.
            </p>
          </div>
          <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 text-xs font-semibold uppercase tracking-[0.3em] text-white/60">
            Vision platform
          </div>
        </div>

        <div class="mt-10 grid grid-cols-1 gap-6 md:grid-cols-2">
          {availableNow.map((product) => (
            <article class="group flex h-full flex-col overflow-hidden rounded-2xl border border-white/10 bg-black/40 backdrop-blur transition hover:border-white/20 hover:bg-black/55">
              <div class="flex items-center justify-center border-b border-white/10 bg-black/30 px-6 py-10">
                <img
                  src={product.image}
                  alt={product.name}
                  loading="lazy"
                  class="h-40 w-auto object-contain transition duration-300 group-hover:scale-[1.03]"
                />
              </div>
              <div class="flex h-full flex-col gap-4 p-6">
                <div class="flex items-center justify-between text-xs font-semibold uppercase tracking-[0.2em] text-white/50">
                  <span>{product.category}</span>
                  <span class="text-emerald-300/80">Available now</span>
                </div>
                <div>
                  <h3 class="text-2xl font-semibold">{product.name}</h3>
                  <p class="mt-3 text-sm leading-relaxed text-white/70">
                    {product.description}
                  </p>
                </div>
                <div class="mt-auto">
                  <a
                    href={product.href}
                    class="inline-flex items-center gap-2 rounded-full bg-red-600 px-5 py-2 text-sm font-semibold text-white shadow-lg shadow-red-600/30 transition hover:bg-red-500"
                  >
                    View product
                    <span aria-hidden="true">›</span>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="relative">
      <div class="mx-auto max-w-6xl px-6 pb-24">
        <div class="rounded-3xl border border-white/10 bg-black/45 p-10 md:p-12">
          <div class="flex flex-col gap-6 md:flex-row md:items-start md:justify-between">
            <div>
              <h2 class="text-3xl font-semibold tracking-tight md:text-4xl">
                Coming soon
              </h2>
              <p class="mt-3 text-sm text-white/70 md:text-base">
                Vision processing and additional modules for navigation, sensing,
                and control.
              </p>
            </div>
            <p class="text-xs font-semibold uppercase tracking-[0.4em] text-white/40">
              Roadmap
            </p>
          </div>

          <div class="mt-10 grid gap-4 md:grid-cols-2">
            {comingSoon.map((product) => (
              <div class="flex items-start justify-between gap-4 rounded-2xl border border-white/10 bg-black/30 px-5 py-4">
                <div class="flex flex-col gap-3">
                  <div class="text-xs font-semibold uppercase tracking-[0.2em] text-white/45">
                    {product.category}
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-white/90">
                      {product.name}
                    </h3>
                    <p class="mt-2 text-sm text-white/60">{product.summary}</p>
                  </div>
                </div>
                <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs font-semibold uppercase tracking-[0.2em] text-white/50">
                  Soon
                </span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
